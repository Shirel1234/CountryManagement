{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src", 
      "resolveJsonModule": true, 
      "types": ["jest", "node"],
      "typeRoots": ["./src/types", "node_modules/@types"]
    },
    "include": ["src/**/*", "src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  